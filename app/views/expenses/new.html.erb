<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header">
          <h2 class="card-title text-center">Add New Expense to <%= @trip.name %></h2>
        </div>
        <div class="card-body">
          <%= render 'form', trip: @trip, expense: @expense %>

          <div class="mt-3 text-center">
            <%= link_to "Back to Trip", trip_path(@trip), class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
