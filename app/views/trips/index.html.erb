<h1>Your Trips</h1>

<%= link_to "Create a New Trip", new_trip_path, class: "btn btn-primary" %>

<% if @trips.any? %>
  <ul>
    <% @trips.each do |trip| %>
      <li>
        <%= link_to trip.name, trip_path(trip) %> â€” 
        <%= trip.start_date %> to <%= trip.end_date %>
        |
        <%= button_to "Delete", trip_path(trip), method: :delete, data: { turbo_confirm: "Delete this trip?" }, form: { data: { turbo: false }, style: "display: inline" }, class: "text-danger" %>
        <%= link_to "Edit", edit_trip_path(trip), class: "btn btn-outline-primary" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No trips yet. Start by creating one!</p>
<% end %>
